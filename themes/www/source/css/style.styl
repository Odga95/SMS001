//Estilos

body
  color color-letter
  font-family fontfam1
  font-size font-l

.container
  padding 0 20px
  max-width 1200px
  margin auto

.alto
  height 80px
  background color-white
  @media tablet
    height 160px


// Home
    .container-home
      width 100%
      height 80vh
      display flex
      justify-content center
      text-align center
      margin-top 20px
      position relative

      .behind
        width 100%
        height 99%
        object-fit cover
        position absolute
        z-index 0
        margin-top 2px
        top 0
        left 0
      
      .gradiente
        display flex
        flex-direction column 
        z-index 1
        width 100%
        height 100%
        background rgb(255,255,255)
        background -moz-linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(170,170,170,0) 16%, rgba(179,179,179,0) 48%, rgba(191,191,191,0) 84%, rgba(255,255,255,1) 100%)
        background -webkit-linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(170,170,170,0) 16%, rgba(179,179,179,0) 48%, rgba(191,191,191,0) 84%, rgba(255,255,255,1) 100%)
        background linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(170,170,170,0) 16%, rgba(179,179,179,0) 48%, rgba(191,191,191,0) 84%, rgba(255,255,255,1) 100%)

      .banner-home
        display flex
        flex-direction column 
        width 100%
        height 40vh
        background rgba(58, 58, 58, 0.445)
        margin-top auto
        margin-bottom  auto
        justify-content center

        p
          font-size 18px
          color white
          @media movil
            font-size 25px 
            @media tablet
              font-size 28px
            

    .card-content p
      margin-top auto
      margin-bottom  auto
      font-size 15px
      color rgba(0, 0, 0, 0.959)
      @media movil
        font-size 18px
        @media tablet
          font-size 25px


    .container-menu
      width 100%
      height fit-content
      display flex
      flex-direction column
      column-count 3
      justify-content center
      align-items center

      .card
        display flex
        flex-direction column
        align-items center
        width 100% 
        margin-top 50px
        height fit-content
        @media movil
          width 85% 
        @media tablet
          width 75% 

        .card-img
          width 80% 
          height 300px
          margin-bottom 20px
          @media movil
            height 350px
          @media tablet
            height 400px
        img
          border-radius 15px
          width 100%
          height 100%
          object-fit cover

        .card-info
          width 60%
          .card-title
            text-transform capitalize
            margin-bottom 10px
            font-size 18px

          .text-card 
            font-size 18px
            display -webkit-box
            width 100%
            height 100%
            line-height 1
            -webkit-line-clamp 5
            -webkit-box-orient vertical
            overflow hidden
            text-overflow ellipsis
          
        .but-content 
          width 100%
          text-align left  

        .continue
          width fit-content
          background-color #fac000
          font-size 10px
          color white
          padding 10px 16px
          margin 12px 0
          border none
          border-radius 5px
          cursor pointer
          font-weight 600
          text-transform uppercase
          
      hr
        width 40%
        height 1px
        border 0
        background #fac000
        margin 10px 70px


      .blog-logo
        margin-top 50px
        width 200px
        max-width 100%
        @media movil
          width 250px
        @media tablet
          width 300px
        img
          width 100%
      
// contact
.container .border-m
  border-radius 15px
  margin-top 50px

.contact
  margin 20px 20px
  background white
  text-align center

.d-flex-contact
  display flex
  margin 20px 0px

section 
  width 49%
  margin-right 1%

aside 
  width 49%
  margin-left 1%

  .form 
    display flex
    flex-direction column

    input, textarea
      width 100%
      padding 12px 20px
      margin 8px 0
      display inline-block
      border 1px solid #ccc
      border-radius 4px
      font-family fontfam3
      outline none
  
    inputfocus,textareafocus
          background rgba(218, 218, 218, 0.158)
    
    textarea
      max-width 100%
      height 300px
      

    #bpriva
      width 100%
      background-color #fac000
      color white
      padding 14px 20px
      margin 8px 0
      border none
      border-radius 4px
      cursor pointer
      font-weight 600
      letter-spacing 3px
      text-transform uppercase

    #bprivahover 
      background-color #e6b000

