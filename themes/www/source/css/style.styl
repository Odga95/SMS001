// Sliders

.slider
  margin-top 25px
  width: 100%
  display: flex
  flex-direction: column
  text-align: center
  justify-content: center
  align-items: center

  .slider-img-container
    width: 90%
    height: 250px
    @media movil
      width: 85%
      height: 350px
    @media tablet
      width: 70%
      height: 400px

    img
      height 100%
      object-fit: cover

  .mySlide 
    display none
    width: 100%

.slider-img-container
  width: 90%

.buttons-container
  margin 15px

  .slider-button
    background-color #fac000
    color white
    padding 8px 10px
    margin 8px 4px
    border none
    border-radius 4px
    cursor pointer
    font-weight 600
    letter-spacing 3px
    text-transform uppercase









    

